<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_25sp"
        android:background="@color/txt_focus"
        android:gravity="center"
        android:text="请输入权限密码"
        android:textColor="#ffffff"
        android:textSize="@dimen/DIMEN_13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_150dp">

        <ImageView
            android:id="@+id/img_cap"
            android:layout_width="@dimen/DIMEN_45dp"
            android:layout_height="@dimen/DIMEN_90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/gj_widget_permission_lx_change" />

        <TextView
            android:layout_marginTop="@dimen/DIMEN_10dp"
            android:layout_below="@id/img_cap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0%"
            android:textSize="@dimen/DIMEN_12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="@dimen/DIMEN_5dp"
        android:layout_marginBottom="@dimen/DIMEN_5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_30dp">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="@dimen/DIMEN_30dp"
            android:layout_alignParentRight="true"
            android:text="重置"
            android:textColor="#aa000000"
            android:textSize="@dimen/DIMEN_8sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_toLeftOf="@id/btn_ok"
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="@dimen/DIMEN_30dp"
            android:text="取消"
            android:textColor="#aa000000"
            android:textSize="@dimen/DIMEN_8sp" />

    </RelativeLayout>


</LinearLayout>