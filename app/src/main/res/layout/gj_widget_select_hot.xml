    <ImageView
        android:id="@+id/txt_notice"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



    <LinearLayout android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="@dimen/DIMEN_120dp"
            android:layout_marginRight="@dimen/DIMEN_120dp"
            android:layout_marginBottom="@dimen/DIMEN_40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_th_50"
                android:text="50째C"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="@dimen/DIMEN_12sp"
                android:background="@drawable/gj_shape_cir_textview"
                android:layout_width="@dimen/DIMEN_40dp"
                android:layout_height="@dimen/DIMEN_40dp" />

            <View
                android:layout_marginLeft="@dimen/DIMEN_5dp"
                android:layout_marginRight="@dimen/DIMEN_5dp"
                android:layout_gravity="center_vertical"
                android:background="#c2c2c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/DIMEN_3dp"></View>

            <TextView
                android:id="@+id/txt_th_65"
                android:textColor="#ffffff"
                android:text="65째C"
                android:gravity="center"
                android:textSize="@dimen/DIMEN_12sp"
                android:background="@drawable/gj_shape_cir_textview"
                android:layout_width="@dimen/DIMEN_40dp"
                android:layout_height="@dimen/DIMEN_40dp" />

            <View
                android:layout_marginLeft="@dimen/DIMEN_5dp"
                android:layout_marginRight="@dimen/DIMEN_5dp"
                android:layout_gravity="center_vertical"
                android:background="#c2c2c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/DIMEN_3dp"></View>

            <TextView
                android:id="@+id/txt_th_85"
                android:textColor="#ffffff"
                android:text="80째C"
                android:gravity="center"
                android:textSize="@dimen/DIMEN_12sp"
                android:background="@drawable/gj_shape_cir_textview"
                android:layout_width="@dimen/DIMEN_40dp"
                android:layout_height="@dimen/DIMEN_40dp" />

            <View
                android:layout_marginLeft="@dimen/DIMEN_5dp"
                android:layout_marginRight="@dimen/DIMEN_5dp"
                android:layout_gravity="center_vertical"
                android:background="#c2c2c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/DIMEN_3dp"></View>

            <TextView
                android:id="@+id/txt_th_95"
                android:textColor="#ffffff"
                android:text="90째C"
                android:gravity="center"
                android:textSize="@dimen/DIMEN_12sp"
                android:background="@drawable/gj_shape_cir_textview"
                android:layout_width="@dimen/DIMEN_40dp"
                android:layout_height="@dimen/DIMEN_40dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_marginRight="@dimen/DIMEN_10dp"
        android:layout_marginBottom="@dimen/DIMEN_10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/DIMEN_50dp"
        android:layout_height="@dimen/DIMEN_50dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_centerInParent="true"
            android:background="@drawable/gj_selecter_icon_back_2"
            android:layout_width="@dimen/DIMEN_30dp"
            android:layout_height="@dimen/DIMEN_30dp" />

    </RelativeLayout>

</RelativeLayout>