<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>

            <RelativeLayout
                android:layout_width="@dimen/DIMEN_40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/gj_about_img_pre"
                    android:layout_width="@dimen/DIMEN_15dp"
                    android:layout_height="@dimen/DIMEN_25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gj_selecter_icon_pre"
                    android:clickable="true"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/DIMEN_40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/gj_about_img_next"
                    android:layout_width="@dimen/DIMEN_15dp"
                    android:layout_height="@dimen/DIMEN_25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gj_selecter_icon_next"
                    android:clickable="true"
                    android:scaleType="fitXY" />

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/circles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"></LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="@dimen/DIMEN_50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/DIMEN_10dp"
            android:layout_marginRight="@dimen/DIMEN_10dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_centerInParent="true"
                android:background="@drawable/gj_selecter_icon_back_2"
                android:layout_width="@dimen/DIMEN_30dp"
                android:layout_height="@dimen/DIMEN_30dp" />

        </RelativeLayout>

        <com.third.zoom.guanjia.widget.PayView
            android:id="@+id/pawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></com.third.zoom.guanjia.widget.PayView>

        <com.third.zoom.guanjia.widget.SetPermissionView
            android:id="@+id/setPermissionView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></com.third.zoom.guanjia.widget.SetPermissionView>

    </RelativeLayout>


