<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_60dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_gravity="center_vertical"
            android:background="@drawable/gj_selecter_icon_back"
            android:layout_margin="@dimen/DIMEN_10dp"
            android:layout_width="@dimen/DIMEN_10dp"
            android:layout_height="@dimen/DIMEN_16dp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_gj_zh_1"
                android:layout_width="match_parent"
                      android:text="水机说明"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_15sp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_eh_1"
                      android:text="Machine Instructions"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_10sp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_zh_2"
                      android:text="专利证书"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_15sp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_eh_2"
                      android:text="Patent description"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_10sp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_zh_3"
                      android:text="氢与健康"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_15sp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_eh_3"
                      android:text="Hydrogen-health"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_10sp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_zh_4"
                      android:text="售后维修"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_15sp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_eh_4"
                      android:text="After-sale Repair"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_10sp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_zh_5"
                      android:text="产品系列"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_15sp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_eh_5"
                      android:text="Product Series"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_10sp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_zh_6"
                      android:text="设置权限"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_15sp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txt_gj_eh_6"
                      android:text="Set Permission"
                      android:gravity="center"
                      android:textColor="#c2c2c2"
                      android:textSize="@dimen/DIMEN_10sp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="match_parent">

            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/gj_about_img_pre"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gj_selecter_icon_pre"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/DIMEN_15dp"
                    android:layout_height="@dimen/DIMEN_25dp" />
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:layout_marginTop="@dimen/DIMEN_20dp"
                android:layout_marginBottom="@dimen/DIMEN_60dp"
                android:layout_marginLeft="@dimen/DIMEN_90dp"
                android:layout_marginRight="@dimen/DIMEN_90dp"
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/gj_about_img_next"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gj_selecter_icon_next"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/DIMEN_15dp"
                    android:layout_height="@dimen/DIMEN_25dp" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/circles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        </LinearLayout>

        <com.third.zoom.guanjia.widget.SetPermissionView
            android:visibility="gone"
            android:id="@+id/setPermissionView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.third.zoom.guanjia.widget.SetPermissionView>

    </RelativeLayout>

</LinearLayout>