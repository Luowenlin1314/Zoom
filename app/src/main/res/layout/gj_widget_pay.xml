<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gj_tc_bg">

    <RelativeLayout
        android:id="@+id/rl_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_tc_a"
                android:layout_width="@dimen/DIMEN_232dp"
                android:layout_height="@dimen/DIMEN_52dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_132dp"
                android:background="@drawable/gj_selecter_tc_a" />

            <ImageView
                android:id="@+id/img_tc_b"
                android:layout_width="@dimen/DIMEN_232dp"
                android:layout_height="@dimen/DIMEN_52dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/img_tc_a"
                android:layout_marginRight="@dimen/DIMEN_132dp"
                android:layout_marginTop="@dimen/DIMEN_5dp"
                android:background="@drawable/gj_selecter_tc_b" />

            <ImageView
                android:id="@+id/img_tc_c"
                android:layout_width="@dimen/DIMEN_232dp"
                android:layout_height="@dimen/DIMEN_52dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/img_tc_b"
                android:layout_marginRight="@dimen/DIMEN_132dp"
                android:layout_marginTop="@dimen/DIMEN_5dp"
                android:background="@drawable/gj_selecter_tc_c" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_tc_select"
            android:layout_width="@dimen/DIMEN_202dp"
            android:layout_height="@dimen/DIMEN_212dp"
            android:layout_marginLeft="@dimen/DIMEN_152dp"
            android:background="@drawable/gj_selecter_tc_select" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img_money"
                android:layout_width="@dimen/DIMEN_200dp"
                android:layout_height="@dimen/DIMEN_200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gj_pay_test" />

            <TextView
                android:id="@+id/txt_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_money"
                android:gravity="center"
                android:text="需要付2000元"
                android:textColor="#000000"
                android:textSize="@dimen/DIMEN_20sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_change_back"
        android:layout_width="@dimen/DIMEN_50dp"
        android:layout_height="@dimen/DIMEN_50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/DIMEN_10dp"
        android:layout_marginRight="@dimen/DIMEN_10dp">

        <ImageView
            android:id="@+id/img_change_back"
            android:layout_width="@dimen/DIMEN_30dp"
            android:layout_height="@dimen/DIMEN_30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/gj_selecter_icon_back_2" />

    </RelativeLayout>

</RelativeLayout>

